{% extends 'base.html.twig' %}

{% block title %}PlanetHvH | Register{% endblock %}

{% block body %}
<body class="bg-gray-900 text-white">
    <div class="min-h-screen flex flex-col items-center justify-center">
        <form method="post" class="bg-gray-800 p-8 rounded-lg shadow-lg w-full max-w-md">
            <h1 class="text-3xl font-bold mb-6 text-center">Register</h1>

            {{ form_errors(registrationForm) }}

            {{ form_start(registrationForm) }}
            <div class="mb-4">
                {{ form_label(registrationForm.username, null, { 'label_attr': { 'class': 'block text-gray-300' } }) }}
                {{ form_widget(registrationForm.username, { 'attr': { 'class': 'w-full px-3 py-2 bg-gray-700 text-white rounded' } }) }}
                {{ form_errors(registrationForm.username) }}
            </div>
            <div class="mb-4">
                {{ form_label(registrationForm.plainPassword, 'Password', { 'label_attr': { 'class': 'block text-gray-300' } }) }}
                {{ form_widget(registrationForm.plainPassword, { 'attr': { 'class': 'w-full px-3 py-2 bg-gray-700 text-white rounded' } }) }}
                {{ form_errors(registrationForm.plainPassword) }}
            </div>
            <div class="mb-6">
                {{ form_label(registrationForm.agreeTerms, null, { 'label_attr': { 'class': 'block text-gray-300' } }) }}
                {{ form_widget(registrationForm.agreeTerms, { 'attr': { 'class': 'mr-2' } }) }}
                {{ form_errors(registrationForm.agreeTerms) }}
            </div>
            <button type="submit" class="w-full bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded">
                Register
            </button>
            {{ form_end(registrationForm) }}
        </form>
        <p class="mt-4">Already an account? Go to <a class="text-blue" href="/login">Login</a></p>
    </div>
</body>
{% endblock %}
