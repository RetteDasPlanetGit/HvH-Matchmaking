{% extends 'base.html.twig' %}

{% block title %}PlanetHvH | Login{% endblock %}

{% block body %}
<body class="bg-gray-900 text-white">
    <div class="min-h-screen flex flex-col items-center justify-center">
        <form method="post" class="bg-gray-800 p-8 rounded-lg shadow-lg w-full max-w-md">
            {% if error %}
                <div class="bg-red-500 text-white p-3 rounded mb-4">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3 text-gray-300">
                    You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}" class="text-blue-400 hover:text-blue-600">Logout</a>
                </div>
            {% endif %}

            <h1 class="text-3xl font-bold mb-6 text-center">Please sign in</h1>

            <div class="mb-4">
                <label for="inputUsername" class="block text-gray-300">Username</label>
                <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="w-full px-3 py-2 bg-gray-700 text-white rounded" autocomplete="username" required autofocus>
            </div>

            <div class="mb-6">
                <label for="inputPassword" class="block text-gray-300">Password</label>
                <input type="password" name="password" id="inputPassword" class="w-full px-3 py-2 bg-gray-700 text-white rounded" autocomplete="current-password" required>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button class="w-full bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" type="submit">
                Sign in
            </button>
        </form>
        <p class="mt-4">No account? Go to <a class="text-blue" href="/register">Register</a></p>
    </div>
</body>
{% endblock %}
